<body>
<% if crashed %>
  <div class="warning"; style=" font-size:30px; font-weight:bold;">Application was Crashed!</div>
<% end %>

<p>
  <a href="console.log"; style=" font-size:20px; font-weight:bold;">console log</a>
  <% if crash_report %>
    | <a href="<%= crash_report %>"; style=" font-size:20px; font-weight:bold;">crash report</a>
  <% end %>
</p>



<% log_list.each_with_index do |_, i| %>
<% if i > 0 %>
<div class="event_box"><canvas id="log-<%= i %>"; style="border: 1px black solid"></canvas><div class="event_text" id="text-<%= i %>"></div></div>
<% end %>
<% end %>
<script type="text/javascript">
$(function() {
    MonkeyResult().configure({
        log_list: log_list_json(),
        view_prefix: 'log',
        text_prefix: 'text',
        image_size_rate: 1
    }).draw();
})

var log_list_json = function() {
    return <%= log_list_json %>;
}
</script>
</body>
